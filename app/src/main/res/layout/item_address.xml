<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/colorOnPrimaryText"
        android:text="@string/account_address_title"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_title"
            android:id="@+id/address_title"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_city"
            android:id="@+id/address_city"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_street"
            android:id="@+id/address_street"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_house"
            android:id="@+id/address_house"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_office"
            android:id="@+id/address_office"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_floor"
            android:id="@+id/address_floor"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_entrance"
            android:id="@+id/address_entrance"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_code"
            android:id="@+id/address_code"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
